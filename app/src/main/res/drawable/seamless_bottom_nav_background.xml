<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Subtle gradient overlay for seamless blending -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/background_primary"
                android:centerColor="#99000000"
                android:endColor="@color/background_primary" />
        </shape>
    </item>
    
    <!-- Glass-like overlay for modern effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0D1C1C1E" />
        </shape>
    </item>
    
</layer-list>
